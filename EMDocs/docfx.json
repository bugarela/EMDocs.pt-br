{
  "build": {
    "markdownEngineName": "markdig",
    "content": [
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "**/obj/**",
          "Solutions/**",
          "_themes/**",
          "**/Token/**"
        ]
      }
    ],
    "resource": [
        {
          "files": [
          "**/images/**", 
          "**/*.png",
          "**/*.jpg",
          "**/*.gif",
          "**/*.bmp",
          "**/*.html"
          ],
        "exclude": [
          "**/obj/**",
          "_themes/**",
          "Solutions/**"
        ]
      }
    ],
    "dest": "EMDocs",
    "template": "docs.html",
    "globalMetadata": {
      "bilingual_type": "hover over", 
      "layout": "Conceptual",
      "breadcrumb_path": "/enterprise-mobility/toc.json"
    }
  },
  "render": {
    "theme": "hyde",
    "dest": "_output"
  },
  "basepath": "/em"
}

